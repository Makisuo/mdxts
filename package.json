{
  "name": "mdxts",
  "private": true,
  "scripts": {
    "preinstall": "mkdir -p ./mdxts/dist/cli && touch ./mdxts/dist/cli/index.js",
    "build": "turbo run build",
    "dev": "turbo run dev",
    "test": "turbo run test",
    "format": "prettier --write '**/**/*.{js,ts,tsx,json,css}'",
    "ci:version": "pnpm changeset version && pnpm install --no-frozen-lockfile && git add .",
    "ci:publish": "pnpm build && pnpm publish -r",
    "clean": "pnpm clean:dist && pnpm clean:next && pnpm clean:turbo && pnpm clean:node_modules",
    "clean:dist": "rimraf */**/dist",
    "clean:next": "rimraf */**/.next",
    "clean:turbo": "rimraf */**/.turbo",
    "clean:node_modules": "rimraf */**/node_modules && rimraf node_modules"
  },
  "devDependencies": {
    "@changesets/cli": "^2.26.0",
    "@swc/core": "^1.3.23",
    "@swc/jest": "^0.2.24",
    "@testing-library/dom": "^8.19.0",
    "@testing-library/jest-dom": "^5.16.5",
    "@testing-library/react": "^13.4.0",
    "@types/jest": "^29.2.4",
    "@types/node": "^18.11.17",
    "@types/react": "^18.0.26",
    "@types/react-dom": "^18.0.9",
    "@types/testing-library__jest-dom": "^5.14.5",
    "jest": "^29.3.1",
    "jest-environment-jsdom": "^29.3.1",
    "next": "^13.0.7",
    "prettier": "^2.8.1",
    "react": "latest",
    "react-dom": "latest",
    "rimraf": "^3.0.2",
    "tsup": "^6.5.0",
    "turbo": "1.6.3",
    "typescript": "^4.9.4"
  }
}
